{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Gestor de Favoritos",
  "permissions": ["sidePanel", "storage"],
  "description": "Extensión visual para gestionar favoritos con sincronización en Chrome.",
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
      "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
